<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="com.example.imalok.shopcart.SignIn">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/linearLayout">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/register_logo"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="160dp"
            android:clickable="true"
            android:layout_marginTop="17dp"
            android:textColor="#646464"
            android:id="@+id/login_skip"
            android:textSize="25dp"
            android:text="Skip" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:textColor="#000"
        android:fontFamily="serif-monospace-condensed"
        android:textStyle="bold"
        android:text="Sign in"
        android:textSize="30dp" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_email"
        android:layout_width="300dp"
        android:layout_marginLeft="60dp"
        android:textColorHint="@color/colorPrimaryDark"
        android:layout_marginTop="200dp"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#000"
            android:hint="Email"
            android:singleLine="true" />
    </android.support.design.widget.TextInputLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/input_layout_email"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="25dp"
        app:srcCompat="@drawable/icon_email" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_pass"
        android:layout_width="300dp"
        app:passwordToggleEnabled="true"
        android:textColorHint="@color/colorPrimaryDark"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="280dp"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:backgroundTint="#000"
            android:hint="Password"
            android:singleLine="true" />
    </android.support.design.widget.TextInputLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/input_layout_pass"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="25dp"
        app:srcCompat="@drawable/pass"
        android:id="@+id/imageView" />

    <TextView
        android:id="@+id/signin_forgpass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_alignEnd="@+id/input_layout_pass"
        android:layout_below="@+id/input_layout_pass"
        android:text="Forgot Password?" />

    <Button
        android:id="@+id/login_btn"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/input_layout_pass"
        android:layout_below="@+id/signin_forgpass"
        android:textColor="#fff"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/mybutton"
        android:text="LOGIN" />

    <TextView
        android:id="@+id/login_signup_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView7"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="43dp"
        android:clickable="true"
        android:fontFamily="sans-serif-condensed"
        android:text="New User? Click Me!"
        android:textColor="#000"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/imageView"
        android:text="Or Sign In with"
        android:textSize="20dp" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/textView7"
        android:layout_alignEnd="@+id/login_btn"
        android:layout_marginEnd="32dp"
        app:srcCompat="@drawable/fb" />


</RelativeLayout>
